<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListenFinalSong"
    android:background="@color/background">

    <ImageView
        android:id="@+id/mergeImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/finish_record_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginBottom="30dp"
        android:id="@+id/songNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="songName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/mergeImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/visor"/>

    <Button
        android:id="@+id/notVisibleButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mergeImageView"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mergeImageView" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mergeImageView"
        android:layout_marginTop="50dp"
        android:background="@drawable/pause_button"/>

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notVisibleButton"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:background="@drawable/default_button"
        android:text="@string/goBackButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>