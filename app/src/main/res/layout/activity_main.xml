<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/monofett"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="40sp" />

    <Button
        android:id="@+id/youtubeMusicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100sp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button1"
        android:text="@string/alreadyRecordTracks"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/ownMusicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtubeMusicButton"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button1"
        android:text="@string/ownMusicButton"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ownMusicButton"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button1"
        android:text="@string/permissionRequestButton"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/loginTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requestPermissionButton"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:text="@string/loginTxt"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/registerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requestPermissionButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="70dp"
        android:text="@string/registerTxt"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/logoutTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requestPermissionButton"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:text="@string/logOutTxt"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>